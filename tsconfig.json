{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"module": "commonjs",
		"target": "es5",
		"jsx": "react",
		"experimentalDecorators": true,
		"lib": [
			"es2017",
			"dom"
		],

		/* Additional Checks */
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true
	},

	"paths": {
		"*": [
			"./*",
			"../typings/*",
			"*"
		]
	}
}